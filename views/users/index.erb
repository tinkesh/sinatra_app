<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Desc</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.desc %></td>
        <td><%= delete_user_button(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '/new', 'New User' %>